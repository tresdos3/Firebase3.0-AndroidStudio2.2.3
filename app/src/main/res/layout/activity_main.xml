<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tresdos.firebaseapp.MainActivity">

    <Button
        android:text="Agregar Nuevo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/AddDate"
        android:layout_below="@+id/txtCamp"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Agregar Dato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AgregarNuevo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/txtCamp"
        android:contentDescription="Ingrese Un Dato"
        android:layout_below="@+id/AgregarNuevo"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/VerTexto"
        android:layout_below="@+id/AddDate"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Ver Lista Usarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVentana"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/VerTexto"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Capturar Imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/VerImagen"
        android:layout_below="@+id/btnVentana"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Subir Imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/btnImagen"
        android:layout_below="@+id/VerImagen"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
